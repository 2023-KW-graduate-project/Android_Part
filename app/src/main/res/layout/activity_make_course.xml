<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".makeCourse.MakeCourseActivity">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolBar"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/yellow_color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/PeopleText"
        style="@style/Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="인원"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolBar" />

    <TextView
        android:id="@+id/numPeople"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@id/PeopleText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guideline"
        app:layout_constraintTop_toTopOf="@id/PeopleText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:text="명"
        app:layout_constraintBaseline_toBottomOf="@id/numPeople"
        app:layout_constraintStart_toEndOf="@+id/numPeople" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.3" />

    <TextView
        android:id="@+id/TimeText"
        style="@style/Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="시간"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/PeopleText" />

    <TextView
        android:id="@+id/startTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@id/TimeText"
        app:layout_constraintEnd_toEndOf="@+id/endTime"
        app:layout_constraintStart_toStartOf="@+id/guideline"
        app:layout_constraintTop_toTopOf="@id/TimeText" />

    <TextView
        android:id="@+id/middleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="~"
        app:layout_constraintBottom_toBottomOf="@id/TimeText"
        app:layout_constraintEnd_toStartOf="@id/endTime"
        app:layout_constraintStart_toEndOf="@id/startTime"
        app:layout_constraintTop_toTopOf="@id/TimeText" />

    <TextView
        android:id="@+id/endTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@id/TimeText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/startTime"
        app:layout_constraintTop_toTopOf="@id/TimeText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:text="시"
        app:layout_constraintBaseline_toBottomOf="@id/endTime"
        app:layout_constraintStart_toEndOf="@+id/endTime" />

    <TextView
        android:id="@+id/keyWordText"
        style="@style/Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="키워드"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/TimeText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginTop="8dp"
        android:text="* 최소 1개"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/keyWordText" />

    <RadioGroup
        android:id="@+id/radioGroup1"
        android:layout_width="200dp"
        android:layout_height="25dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="@id/keyWordText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/guideline"
        app:layout_constraintTop_toTopOf="@id/keyWordText">

        <RadioButton
            android:id="@+id/exoticHigh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이색" />

        <RadioButton
            android:id="@+id/exoticLow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:text="일상" />
    </RadioGroup>

    <RadioGroup
        android:id="@+id/radioGroup3"
        android:layout_width="200dp"
        android:layout_height="25dp"
        android:layout_marginTop="4dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/guideline"
        app:layout_constraintTop_toBottomOf="@id/radioGroup2">

        <RadioButton
            android:id="@+id/activeHigh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="동적" />

        <RadioButton
            android:id="@+id/activeLow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:text="정적" />
    </RadioGroup>

    <RadioGroup
        android:id="@+id/radioGroup2"
        android:layout_width="200dp"
        android:layout_height="25dp"
        android:layout_marginTop="4dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/guideline"
        app:layout_constraintTop_toBottomOf="@id/radioGroup1">

        <RadioButton
            android:id="@+id/hpHigh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="고체력" />

        <RadioButton
            android:id="@+id/hpLow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:text="저체력" />
    </RadioGroup>

    <TextView
        android:id="@+id/goalWordText"
        style="@style/Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="80dp"
        android:text="목적"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/keyWordText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginTop="4dp"
        android:text="* 최대 3개"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/goalWordText" />

    <GridLayout
        android:id="@+id/goalsGridLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/guideline"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="16dp"
        android:gravity="center"
        android:columnCount="4"
        android:rowCount="3"
        app:layout_constraintTop_toTopOf="@id/goalWordText">

        <CheckBox
            android:id="@+id/checkbox1"
            android:layout_column="0"
            android:layout_row="0"
            android:text="산책"/>
        <CheckBox
            android:id="@+id/checkbox2"
            android:layout_column="1"
            android:layout_row="0"
            android:text="음주"/>
        <CheckBox
            android:id="@+id/checkbox3"
            android:layout_column="2"
            android:layout_row="0"
            android:text="메이킹"/>
        <CheckBox
            android:id="@+id/checkbox4"
            android:layout_column="3"
            android:layout_row="0"
            android:text="힐링"/>
        <CheckBox
            android:id="@+id/checkbox5"
            android:layout_column="0"
            android:layout_row="1"
            android:text="관람"/>
        <CheckBox
            android:id="@+id/checkbox6"
            android:layout_column="1"
            android:layout_row="1"
            android:text="사고력"/>
        <CheckBox
            android:id="@+id/checkbox7"
            android:layout_column="2"
            android:layout_row="1"
            android:text="경치"/>
        <CheckBox
            android:id="@+id/checkbox8"
            android:layout_column="3"
            android:layout_row="1"
            android:text="일반"/>
        <CheckBox
            android:id="@+id/checkbox9"
            android:layout_column="1"
            android:layout_row="2"
            android:text="스포츠"/>
        <CheckBox
            android:id="@+id/checkbox10"
            android:layout_column="2"
            android:layout_row="2"
            android:text="솔로"/>
    </GridLayout>

    <TextView
        android:id="@+id/requiredPlaceTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/goalWordText"
        style="@style/Title"
        android:visibility="invisible"
        android:layout_marginTop="136dp"
        app:layout_constraintStart_toStartOf="parent"
        android:text="필수장소"/>

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/chipGroup1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:singleSelection="true"
        app:selectionRequired="true"
        app:layout_constraintStart_toStartOf="@+id/guideline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/goalWordText"
        android:layout_marginTop="120dp">
    </com.google.android.material.chip.ChipGroup>

    <Spinner
        android:id="@+id/categoryListSpinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="@id/guideline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.8"
        app:layout_constraintTop_toBottomOf="@id/requiredPlaceTextView"
        android:layout_marginTop="24dp"
        />


</androidx.constraintlayout.widget.ConstraintLayout>