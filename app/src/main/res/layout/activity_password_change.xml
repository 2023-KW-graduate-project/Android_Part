<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ThirdFeature.PasswordChangeActivity">

    <androidx.appcompat.widget.Toolbar
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/toolBar"
        android:layout_width="match_parent"
        android:background="@color/yellow_color"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/oldPassEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/toolBar"
        android:layout_margin="24dp"
        android:hint="기존 비밀번호 입력"/>

    <EditText
        android:id="@+id/newPassEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        app:layout_constraintTop_toBottomOf="@+id/oldPassEditText"
        android:hint="새 비밀번호 입력"/>

    <EditText
        android:id="@+id/newCheckEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        app:layout_constraintTop_toBottomOf="@+id/newPassEditText"
        android:hint="새 비밀번호 확인"/>

    <Button
        android:id="@+id/changePassButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/newCheckEditText"
        android:background="@drawable/background_rectangle_yellow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="비밀번호수정"
        android:textSize="20sp"
        android:layout_margin="64dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>