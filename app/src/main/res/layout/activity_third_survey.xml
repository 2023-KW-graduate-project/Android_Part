<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".survey.ThirdSurveyActivity">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/yellow_color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/toolBar"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:textSize="25sp"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="아래 중 3가지를 고르세요"/>


    <GridLayout
        android:id="@+id/listGridLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/titleTextView"
        android:layout_marginTop="16dp"
        android:useDefaultMargins="true"
        android:padding="24dp"
        android:columnCount="6"
        android:rowCount="16">

        <CheckBox
            android:id="@+id/check1"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="계곡"
            android:layout_column="0"
            android:layout_row="0"
            android:textSize="15sp"/>
        <CheckBox
            android:id="@+id/check2"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="테마파크"
            android:layout_column="1"
            android:layout_row="0"
            android:textSize="15sp"/>
        <CheckBox
            android:id="@+id/check3"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="동물원"
            android:layout_column="2"
            android:layout_row="0"
            android:textSize="15sp"/>
        <CheckBox
            android:id="@+id/check4"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="케이블카"
            android:layout_column="0"
            android:layout_row="2"
            android:textSize="15sp"/>
        <CheckBox
            android:id="@+id/check5"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="파티룸"
            android:layout_column="1"
            android:layout_row="2"
            android:textSize="15sp"/>
        <CheckBox
            android:id="@+id/check6"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="미술관"
            android:layout_column="2"
            android:layout_row="2"
            android:textSize="15sp"/>
        <CheckBox
            android:id="@+id/check7"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="폭포"
            android:layout_column="0"
            android:layout_row="4"
            android:textSize="15sp"/>
        <CheckBox
            android:id="@+id/check8"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="도자기"
            android:layout_column="1"
            android:layout_row="4"
            android:textSize="15sp"/>
        <CheckBox
            android:id="@+id/check9"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="전망대"
            android:layout_column="2"
            android:layout_row="4"
            android:textSize="15sp"/>
        <CheckBox
            android:id="@+id/check10"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="가죽공방"
            android:layout_column="0"
            android:layout_row="6"
            android:textSize="15sp"/>
        <CheckBox
            android:id="@+id/check11"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="공원"
            android:layout_column="1"
            android:layout_row="6"
            android:textSize="15sp"/>
        <CheckBox
            android:id="@+id/check12"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="전시관"
            android:layout_column="2"
            android:layout_row="6"
            android:textSize="15sp"/>

        <CheckBox
            android:id="@+id/check13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="8"
            android:layout_column="0"
            android:text="식물원"
            android:textSize="15sp" />

        <CheckBox
            android:id="@+id/check14"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="뜨개질"
            android:layout_column="1"
            android:layout_row="8"
            android:textSize="15sp"/>
        <CheckBox
            android:id="@+id/check15"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="베이킹"
            android:layout_column="2"
            android:layout_row="8"
            android:textSize="15sp"/>
        <CheckBox
            android:id="@+id/check16"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="오락실"
            android:layout_column="0"
            android:layout_row="10"
            android:textSize="15sp"/>
        <CheckBox
            android:id="@+id/check17"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="촬영지"
            android:layout_column="1"
            android:layout_row="10"
            android:textSize="15sp"/>
        <CheckBox
            android:id="@+id/check18"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="VR"
            android:layout_column="2"
            android:layout_row="10"
            android:textSize="15sp"/>
        <CheckBox
            android:id="@+id/check19"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="실내낚시"
            android:layout_column="0"
            android:layout_row="12"
            android:textSize="15sp"/>
        <CheckBox
            android:id="@+id/check20"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="탁구"
            android:layout_column="1"
            android:layout_row="12"
            android:textSize="15sp"/>
        <CheckBox
            android:id="@+id/check21"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_column="2"
            android:layout_row="12"
            android:text="궁"
            android:textSize="15sp"/>
    </GridLayout>

    <Button
        android:id="@+id/finishTextView"
        app:layout_constraintTop_toBottomOf="@id/listGridLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="36dp"
        android:layout_width="wrap_content"
        android:background="@color/yellow_color"
        android:textColor="@color/black"
        android:text="Finish"
        android:textSize="30sp"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>