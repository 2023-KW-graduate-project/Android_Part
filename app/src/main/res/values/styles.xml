<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="content_icon">
        <item name="android:maxWidth">35dp</item>
        <item name="android:maxHeight">35dp</item>
        <item name="android:adjustViewBounds">true</item>
    </style>

    <style name="card_view_style">
        <item name="android:clickable">true</item>
        <item name="cardCornerRadius">16dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="background">?attr/selectableItemBackground</item>
        <item name="android:layout_gravity">center</item>
    </style>
    <style name="inner_card_view_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="layout_constraintVertical_bias">0.3</item>
    </style>

    <style name="Title">
        <item name="android:textColor">@color/light_purple</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginTop">32dp</item>
        <item name="android:layout_marginStart">32dp</item>

    </style>

</resources>

